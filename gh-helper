#!/usr/bin/env node

// GitHub CLI extension entry point
// This file routes to the TypeScript implementation using Node.js type stripping

import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Path to the TypeScript main file
const tsMain = join(__dirname, 'gh-helper.ts');

// Forward all arguments to the TypeScript version
const child = spawn('node', ['--experimental-strip-types', tsMain, ...process.argv.slice(2)], {
  stdio: 'inherit'
});

// Exit with the same code as the child process
child.on('close', (code) => {
  process.exit(code || 0);
});

// Handle process termination
process.on('SIGINT', () => {
  child.kill('SIGINT');
});

process.on('SIGTERM', () => {
  child.kill('SIGTERM');
});